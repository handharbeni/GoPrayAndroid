<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/svTextFreeText" android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="0dp"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:scrollbarStyle="outsideOverlay">
    <RelativeLayout android:id="@+id/rlMain" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rlStatus"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:drawable/editbox_background">

            <EditText
                android:hint="@string/captionfreetext"
                android:textAlignment="textStart"
                android:gravity="start"
                android:maxLines="5"
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textStyle="bold" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlBersama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/editbox_background"
            android:layout_below="@+id/rlStatus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/constant_bersama"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Bersama"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <EditText
                android:maxLines="1"
                android:id="@+id/txtBersama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/constant_bersama"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textStyle="bold" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlTempat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/editbox_background"
            android:layout_below="@+id/rlBersama"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/constant_tempat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Di"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <EditText
                android:maxLines="1"
                android:id="@+id/txtTempat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/constant_tempat"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textStyle="bold" />


        </RelativeLayout>
        <Button
            android:id="@+id/btnPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_below="@+id/rlTempat"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/keyboards"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:background="#0000ff"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>